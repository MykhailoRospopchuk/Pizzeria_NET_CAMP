<dialog id="createChefDialog">
    <div class="list-group">
        <div class="container">
            <button id="CloseChefDialogBtn" class="btn-close float-end" type="button" aria-label="Close"></button>
        </div>
        <div class="container">
            <form id="createChefForm" method="dialog">
                <div class="form-group">
                    <label for="chefNameInput">Chef Name</label>
                    <input type="text" class="form-control" id="chefNameInput" placeholder="Enter Name">
                    <small id="nameHelp" class="form-text text-muted">The specified name will be displayed in the pizzeria.</small>
                </div>
                <label for="categoryId">Choise category</label>
                <div class="form-group" id="categoryId">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="category" value="0" id="categoryDrinks">
                        <label class="form-check-label" for="categoryDrinks">Drinks</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="category" value="1" id="categoryPizzas">
                        <label class="form-check-label" for="categoryPizzas">Pizzas</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="category" value="2" id="categorySweets">
                        <label class="form-check-label" for="categorySweets">Sweets</label>
                    </div>
                </div>
                <button id="createChefBtn" type="reset" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</dialog>


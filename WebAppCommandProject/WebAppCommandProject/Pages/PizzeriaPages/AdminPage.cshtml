</dialog>


<dialog id="createClientDialog">
    <div class="list-group">
        <div class="container">
            <button id="CloseClientDialogBtn" class="btn-close float-end" type="button" aria-label="Close"></button>
        </div>
        <div class="container">
            <form id="createClientForm">
                <div class="form-group">
                    <label for="clientNameInput">Client Name</label>
                    <input type="text" class="form-control" id="clientNameInput" placeholder="Enter Name">
                    <small id="emailHelp" class="form-text text-muted">The specified name will be displayed in the pizzeria.</small>
                </div>
                <div class="form-group">
                    <label for="clientStatusInput">Client Status</label>
                    <select class="form-control" id="clientStatusInput">
                        <option value="0">None</option>
                        <option value="1">Bronze</option>
                        <option value="2">Silver</option>
                        <option value="3">Gold</option>
                    </select>
                    <small id="statusHelp" class="form-text text-muted">The status of the client affects its priority in the queue and the size of the check.</small>
                </div>
                <div class="form-group">
                    <label for="clientWaletInput">Client Walet</label>
                    <select class="form-control" id="clientWaletInput">
                        <option value="0">None</option>
                        <option value="1">Cashe</option>
                        <option value="2">PaymentService</option>
                        <option value="3">Card</option>
                    </select>
                    <small id="statusHelp" class="form-text text-muted">Specify the type of wallet the client has.</small>
                </div>
                <button id="createClientBtn" type="reset" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</dialog>
